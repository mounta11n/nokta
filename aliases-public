# Package Managers
case $WHICH_DEVICE in
  DEV_1)
    alias apk='brew'
    alias apd='brew install'
    alias apr='brew uninstall'
    alias aps="brew search"
    alias apu="brew update"
    alias apw="brew list"
    ;;
  DEV_2)
    alias apk='brew'
    alias apd='brew install'
    alias apr='brew uninstall'
    alias aps="brew search"
    alias apu="brew update"
    alias apw="brew list"
    ;;
  DEV_3)
    alias apk='brew'
    alias apd='brew install'
    alias apr='brew uninstall'
    alias aps="brew search"
    alias apu="brew update"
    alias apw="brew list"
    ;;
  DEV_4)
    alias apk='brew'
    alias apd='brew install'
    alias apr='brew uninstall'
    alias aps="brew search"
    alias apu="brew update"
    alias apw="brew list"
    ;;
  DEV_5)
    alias apk='brew'
    alias apd='brew install'
    alias apr='brew uninstall'
    alias aps="brew search"
    alias apu="brew update"
    alias apw="brew list"
    ;;
  DEV_6)
    alias apd="apk add"
    alias apr='apk del'
    alias aps="apk search"
    alias apu="apk update"
    alias apw="bat /etc/apk/world"
    ;;
  DEV_7)
    alias apk='pkg'
    alias apd='pkg install'
    alias apr='pkg remove'
    alias aps='pkg search'
    alias apu='help -l'
    alias apw='pkg list'
    ;;
  DEV_8)
    alias apk='brew'
    alias apd='brew install'
    alias apr='brew uninstall'
    alias aps="brew search"
    alias apu="brew update"
    alias apw="brew list"
    ;;
  DEV_9)
    alias apk='apt'
    alias apd='apt install'
    alias apr='apt remove'
    alias aps='apt search'
    alias apu='apt update'
    alias apw='dpkg -l'
    ;;
  DEV_10)
    alias apd="apk add"
    alias apr='apk del'
    alias aps="apk search"
    alias apu="apk update"
    alias apw="bat /etc/apk/world"
    ;;
  *)
    echo "Unbekanntes Ger√§t: $WHICH_DEVICE"
    ;;
esac

